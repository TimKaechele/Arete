# frozen_string_literal: true
source 'https://rubygems.org'

gem 'sinatra'

# Faraday
gem 'faraday'

# Application Server
gem 'puma'

# Well performing json deserializer
gem 'faraday_middleware-parse_oj'

# Parallel request support
gem 'typhoeus'

gem 'icalendar', git: 'https://github.com/icalendar/icalendar.git'

group :development do
  # Live reloading of code
  gem 'shotgun'
end
